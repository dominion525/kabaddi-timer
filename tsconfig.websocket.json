{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./public/js",
    "removeComments": false,
    "sourceMap": false,
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": false,
    "moduleDetection": "force"
  },
  "include": [
    "src/client/components/websocket-manager.ts",
    "src/client/components/websocket-manager.types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "**/*.test.ts",
    "**/test/**/*",
    "**/__tests__/**/*"
  ]
}