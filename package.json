{
  "name": "kabaddi-timer",
  "version": "0.0.2",
  "description": "カバディ用のタイマー・スコアボードアプリケーション",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "node scripts/build-templates.js && tsc",
    "deploy": "wrangler deploy --env=\"\"",
    "typecheck": "tsc --noEmit",
    "build:frontend": "vite build",
    "dev:frontend": "vite dev --port 3000",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "keywords": [
    "kabaddi",
    "timer",
    "scoreboard",
    "cloudflare",
    "durable-objects"
  ],
  "author": "Satoshi",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.9.3",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "miniflare": "^4.20250917.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  },
  "dependencies": {
    "alpinejs": "^3.14.0",
    "autoprefixer": "^10.4.20",
    "hono": "^4.6.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.0"
  }
}
